<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/dialog_back_ground"
            tools:context=".ui.fragments.ShareBookDetailFragment">

            <TextView
                android:id="@+id/share_book_detail_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/shared_details_header"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/share_book_detail_book_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/book_name"
                android:textColor="@color/primary_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/share_book_detail_header" />

            <TextView
                android:id="@+id/share_book_detail_book_name_given"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:maxLines="2"
                android:text="@string/book_name"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView18"
                app:layout_constraintTop_toTopOf="@+id/share_book_detail_book_name" />

            <TextView
                android:id="@+id/share_book_detail_subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/subject"
                android:textColor="@color/primary_text"
                app:layout_constraintStart_toStartOf="@+id/share_book_detail_book_name"
                app:layout_constraintTop_toBottomOf="@+id/share_book_detail_book_name" />

            <TextView
                android:id="@+id/share_book_detail_subject_given"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subject"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/share_book_detail_subject"
                app:layout_constraintStart_toStartOf="@+id/share_book_detail_book_name_given" />

            <TextView
                android:id="@+id/share_book_detail_author_given"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/author"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/share_book_detail_author"
                app:layout_constraintStart_toStartOf="@+id/share_book_detail_subject_given" />

            <TextView
                android:id="@+id/share_book_detail_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/author"
                android:textColor="@color/primary_text"
                app:layout_constraintEnd_toEndOf="@+id/share_book_detail_subject"
                app:layout_constraintStart_toStartOf="@+id/share_book_detail_subject"
                app:layout_constraintTop_toBottomOf="@+id/share_book_detail_subject" />

            <Button
                android:id="@+id/share_book_detail_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="@string/ok"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/share_book_detail_no_of_pages"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/share_book_detail_no_of_pages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/no_of_pages"
                android:textColor="@color/primary_text"
                app:layout_constraintEnd_toEndOf="@+id/share_book_detail_book_name"
                app:layout_constraintStart_toStartOf="@+id/share_book_detail_author"
                app:layout_constraintTop_toBottomOf="@+id/share_book_detail_author" />

            <TextView
                android:id="@+id/share_book_detail_no_of_pages_given"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_of_pages"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/share_book_detail_no_of_pages"
                app:layout_constraintStart_toStartOf="@+id/share_book_detail_author_given" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:text="@string/semicolon"
                android:textColor="@color/primary_text"
                app:layout_constraintBottom_toBottomOf="@+id/share_book_detail_book_name_given"
                app:layout_constraintStart_toEndOf="@+id/share_book_detail_book_name"
                app:layout_constraintTop_toTopOf="@+id/share_book_detail_book_name_given" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/semicolon"
                android:textColor="@color/primary_text"
                app:layout_constraintBottom_toBottomOf="@+id/share_book_detail_subject_given"
                app:layout_constraintEnd_toEndOf="@+id/textView18"
                app:layout_constraintStart_toStartOf="@+id/textView18"
                app:layout_constraintTop_toTopOf="@+id/share_book_detail_subject_given" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/semicolon"
                android:textColor="@color/primary_text"
                app:layout_constraintBottom_toBottomOf="@+id/share_book_detail_author_given"
                app:layout_constraintEnd_toEndOf="@+id/textView19"
                app:layout_constraintStart_toStartOf="@+id/textView19"
                app:layout_constraintTop_toTopOf="@+id/share_book_detail_author_given" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/semicolon"
                android:textColor="@color/primary_text"
                app:layout_constraintBottom_toBottomOf="@+id/share_book_detail_no_of_pages_given"
                app:layout_constraintEnd_toEndOf="@+id/textView20"
                app:layout_constraintStart_toStartOf="@+id/textView20"
                app:layout_constraintTop_toTopOf="@+id/share_book_detail_no_of_pages_given" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>